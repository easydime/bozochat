{
  "name": "bozochat",
  "version": "1.0.0",
  "description": "Send images/videos to your friends' screens via Discord bot",
  "main": "src/client/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "bot": "node src/bot/index.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.2",
    "electron-store": "^8.1.0",
    "discord.js": "^14.14.1",
    "express": "^4.18.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.bozochat.client",
    "productName": "BozoChat",
    "win": {
      "target": "nsis",
      "icon": "src/client/test.jpg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BozoChat",
      "runAfterFinish": true
    },
    "files": [
      "src/client/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    }
  }
}
